{
    "manifest_version": 3,
    "name": "Subscription Detector",
    "version": "1.0",
    "description": "Highlights the page border red if 'subscription' is found",
    "action": {
      "default_icon": "icon.png"
    },
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["<all_urls>"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "48": "icon.png"
    }
  }
  